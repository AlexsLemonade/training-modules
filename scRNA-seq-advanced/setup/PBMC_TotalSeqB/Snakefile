# Workflow for downloading and preprocessing Tabula Muris data
configfile: "config.yaml"
basedir = config["base_dir"]

rule targets:
  input:
   os.path.join(basedir, "normalized", "PBMC_TotalSeqB_sce.rds")
  
rule download_raw:
  output:
    directory(os.path.join(basedir, "raw_feature_bc_matrix"))
  shell:
    "curl -L {config[url]} | tar xz" 

rule filter_normalize:
  input: 
    raw_dir = os.path.join(basedir, "raw_feature_bc_matrix"),
    mito_file = config["mito_file"]
  output:
    os.path.join(basedir, "normalized", "PBMC_TotalSeqB_sce.rds")
  log:
    "logs/filter_normalize.log"
  shell:
    "Rscript filter_cellranger_citeseq.R"
    "  --raw_matrix_dir {input.raw_dir}"
    "  --mito_file {input.mito_file}"
    "  --outfile {output}"
    " &> {log}"
    
    
